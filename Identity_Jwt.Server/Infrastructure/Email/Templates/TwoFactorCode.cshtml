@model dynamic

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>2FA Verification</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .code {
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
            margin: 20px 0;
        }

        .footer {
            font-size: 12px;
            color: #888;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Two-Factor Authentication (2FA)</h2>
        <p>Your verification code is:</p>
        <div class="code">@Model.Code</div>
        <p>This code will expire in 5 minutes.</p>
        <div class="footer">
            If you did not request this, please ignore this email.
        </div>
    </div>
</body>
</html>
